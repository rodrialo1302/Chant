<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_sec</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_primary</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>